{
  "info": {
    "name": "Prysm Mini CRM API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/auth/register"
        },
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Admin\",\"email\":\"admin@test.com\",\"password\":\"password123\",\"role\":\"ADMIN\"}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/auth/login"
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"admin@test.com\",\"password\":\"password123\"}"
        }
      }
    },
    {
      "name": "Get Customers",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/customers"
        }
      }
    }
  ]
}